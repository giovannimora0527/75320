// LibroController.java
@GetMapping("/por-fecha")
public List<Libro> listarLibrosPorFecha(
        @RequestParam @DateTimeFormat(iso = DateTimeFormat.ISO.DATE) LocalDate inicio,
        @RequestParam @DateTimeFormat(iso = DateTimeFormat.ISO.DATE) LocalDate fin) {
    return libroService.listarPorRangoFechas(inicio, fin);
}

// LibroService.java
public List<Libro> listarPorRangoFechas(LocalDate inicio, LocalDate fin) {
    return libroRepository.findByFechaPublicacionBetween(inicio, fin);
}
