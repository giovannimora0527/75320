// LibroController.java
@GetMapping("/buscar-exacto")
public ResponseEntity<Libro> buscarLibroPorNombreExacto(@RequestParam String titulo) {
    Optional<Libro> libro = libroService.buscarPorNombreExacto(titulo);
    return libro.map(ResponseEntity::ok)
                .orElseGet(() -> ResponseEntity.notFound().build());
}

// LibroService.java
public Optional<Libro> buscarPorNombreExacto(String titulo) {
    return libroRepository.findByTitulo(titulo);
}
